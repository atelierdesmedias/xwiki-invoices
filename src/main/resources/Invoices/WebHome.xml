{{velocity}}
#if ($request.iaction == 'create_invoice')
  #set($invoiceNumber = $services.invoice.newNumber)
  #set($redirect = $xwiki.getURL("${doc.space}.Invoice${invoiceNumber}", "edit", "template=InvoicesCode.InvoiceTemplate&amp;parent=$doc.name&amp;number=$invoiceNumber&amp;type=invoice&amp;xredirect=$escapetool.url($doc.URL)"))
